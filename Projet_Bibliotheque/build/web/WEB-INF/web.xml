        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherSuggestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherGestionSuggestion</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherGestionSuggestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleurFrontal</servlet-name>
        <url-pattern>/go</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherAccueil</servlet-name>
