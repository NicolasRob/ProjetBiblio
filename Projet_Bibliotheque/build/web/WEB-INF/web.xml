<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <description>Pilote JDBC</description>
        <param-name>piloteJDBC</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <description>URL de la BD</description>
        <param-name>urlBd</param-name>
        <param-value>jdbc:mysql://localhost/biblio?user=root&amp;password=root</param-value>
    </context-param>
    <servlet>
        <servlet-name>ControleurFrontal</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.ControleurFrontal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherAccueil</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherAccueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherCatalogue</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherCatalogue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherDetails</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherLogin</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Connection</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherReservations</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherReservations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherEmprunts</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherEmprunts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherGestionCatalogue</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherGestionCatalogue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherAjoutOuvrage</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherAjoutOuvrage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherAjoutEdition</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherAjoutEdition</servlet-class>
    </servlet>
    <servlet>
