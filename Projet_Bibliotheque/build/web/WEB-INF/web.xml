<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ControleurFrontal</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.ControleurFrontal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherAccueil</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherAccueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherCatalogue</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherCatalogue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherDetails</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherLogin</servlet-name>
        <servlet-class>com.robillard.bibliotheque.controlleur.AfficherLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleurFrontal</servlet-name>
        <url-pattern>/go</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherAccueil</servlet-name>
        <url-pattern>/AfficherAccueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherCatalogue</servlet-name>
        <url-pattern>/AfficherCatalogue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherDetails</servlet-name>
        <url-pattern>/AfficherDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficherLogin</servlet-name>
        <url-pattern>/AfficherLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
